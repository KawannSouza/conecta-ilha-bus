generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name      String 
  username  String   @unique
  email     String   @unique
  password  String 
  createdAt DateTime @default(now())
}

model Linha {
  id String @id @default(uuid())
  name        String
  code        String
  origin      String
  destination String
  route       String[]
  feedbacks   Feedback[]
}

model Feedback {
  id String @id @default(uuid())
  username       String
  lineName       String
  frequencia     Int
  pontualidade   Int
  lotacao        Int
  conservacao    Int
  educacao       Int
  acessibilidade Int
  sinalizacao    Int
  preparo        Int
  ambiente       Int
  comentario     String
  linhaId        String   
  linha          Linha    @relation(fields: [linhaId], references: [id])
  createdAt      DateTime @default(now())
}